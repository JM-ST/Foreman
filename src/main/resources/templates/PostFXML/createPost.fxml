<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="th.ac.ku.cs.sci.Foreman.Controller.FXMLController.Post.CreatePostController">
   <children>
      <VBox prefHeight="600.0" prefWidth="800.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="topic" promptText="Topic">
                     <HBox.margin>
                        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                     </HBox.margin></TextField>
                  <Label text="Report Name">
                     <HBox.margin>
                        <Insets left="-200.0" top="25.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <Label text="Report Detail  :">
               <VBox.margin>
                  <Insets left="50.0" />
               </VBox.margin>
            </Label>
            <TextArea fx:id="detail" prefHeight="314.0" prefWidth="700.0" promptText="Report...">
               <VBox.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="10.0" />
               </VBox.margin></TextArea>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="upload" mnemonicParsing="false" onAction="#handleBtnUpload" text="Upload Image">
                     <HBox.margin>
                        <Insets left="500.0" top="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleBtnCreate" text="Create">
                     <HBox.margin>
                        <Insets left="75.0" top="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
