    <children>
        <VBox prefHeight="600.0" prefWidth="600.0">
            <children>
                <Pane prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label fx:id="siteName" layoutX="7.0" layoutY="32.0">
