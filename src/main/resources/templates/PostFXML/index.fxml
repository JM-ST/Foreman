                        <Insets bottom="30.0" left="70.0" right="70.0" top="35.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleBtnEdit" text="Edit">
                     <HBox.margin>
                        <Insets bottom="30.0" left="70.0" right="70.0" top="35.0" />
                     </HBox.margin>
                  </Button>
                      <Button mnemonicParsing="false" onAction="#handleBtnShow" text="Show">
