<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml" fx:controller="th.ac.ku.cs.sci.Foreman.Controller.FXMLController.User.ProfileController">
    <children>
        <HBox prefHeight="600.0" prefWidth="800.0">
            <children>
                <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #1A1A1A;">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <children>
                  <VBox prefHeight="600.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleBtnBack" style="-fx-background-color: transparent;" text="←" textFill="WHITE">
                           <VBox.margin>
                              <Insets bottom="30.0" left="10.0" right="30.0" top="10.0" />
                           </VBox.margin>
                           <font>
                              <Font name="System Bold" size="29.0" />
                           </font>
                        </Button>
                        <ImageView fx:id="profile" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <VBox.margin>
                              <Insets top="120.0" />
                           </VBox.margin>
                        </ImageView>
                     </children></VBox>
               </children></Pane>
                <Pane prefHeight="200.0" prefWidth="600.0" style="-fx-background-color: #F2CF19;">
               <children>
                  <VBox fx:id="email" prefHeight="600.0" prefWidth="600.0">
                     <children>
                        <TextField fx:id="name" promptText="Name" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 0px 0px 5px 0px; -fx-prompt-text-fill: black;">
                           <VBox.margin>
                              <Insets bottom="50.0" left="100.0" right="100.0" top="100.0" />
                           </VBox.margin>
                           <font>
                              <Font name="Noto Sans Thai UI Regular" size="16.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="mail" promptText="Email" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 0px 0px 5px 0px; -fx-prompt-text-fill: black;">
                           <VBox.margin>
                              <Insets bottom="50.0" left="100.0" right="100.0" />
                           </VBox.margin>
                           <font>
                              <Font name="Noto Sans Thai UI Regular" size="16.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="tel" promptText="Tel" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 0px 0px 5px 0px; -fx-prompt-text-fill: black;">
                           <VBox.margin>
                              <Insets left="100.0" right="100.0" />
                           </VBox.margin>
                           <font>
                              <Font name="Noto Sans Thai UI Regular" size="16.0" />
                           </font>
                        </TextField>
                     </children></VBox>
               </children></Pane>
            </children></HBox>
    </children>
</AnchorPane>
